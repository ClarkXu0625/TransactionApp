<h1>Edit Transaction</h1>
<form action="/transaction/updateTransaction" method="POST">
    <input type="hidden" name="transactionId" value="<%= transaction._id %>">
    <label for="description">Description:</label>
    <input type="text" name="description" id="description" value="<%= transaction.description %>">
    <br>
    <label for="amount">Amount:</label>
    <input type="number" name="amount" id="amount" value="<%= transaction.amount %>">
    <br>
    <label for="category">Category:</label>
    <input type="text" name="category" id="category" value="<%= transaction.category %>">
    <br>
    <label for="date">Date:</label>
    <input type="date" name="date" id="date" value="<%= transaction.date.toISOString().split('T')[0] %>">
    <br>
    <input type="submit" value="Update Transaction">
</form>